check process {{app_name}} MATCHING "releases/[\.[:alnum:]]+/{{ app_name }}"
       start program = "/bin/su - {{ deployer }} -c 'PORT={{ app_port }} {{project_path}}/_build/{{ mix_env }}/rel/{{app_name}}/bin/{{app_name}} start'"
       stop program = "/bin/su - {{ deployer }} -c 'PORT={{ app_port }} {{project_path}}/_build/{{ mix_env }}/rel/{{app_name}}/bin/{{app_name}} stop'"
       {% for alert_email in app_alert_emails %}
       alert {{ alert_email }}
       {% endfor %}
